<?xml version="1.0" encoding="utf-8"?>
<!-- 应用相关配置，package(指定应用的包名)-->
<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="com.firechiang.android.copycat_helloword">
    <!-- icon(应用图标)，label（应用名称），theme（引用主题） -->
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <!-- name（主界面Activity，点代表package（包名），也可以写全路径包名）,label（主界面名称）-->
        <activity android:name=".MainActivity" android:label="@string/app_name">
            <!-- 意图过滤器 -->
            <intent-filter>
                <!-- android.intent.action.MAIN（让当前这个Activity成为主Activity） -->
                <action android:name="android.intent.action.MAIN" />
                <!-- android.intent.category.LAUNCHER（应用分类，让应用图标显示在主界面分类里面） -->
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>