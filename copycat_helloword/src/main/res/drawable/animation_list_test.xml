<?xml version="1.0" encoding="utf-8"?>
<!-- 连续动画简单使用，android:oneshot（是否无限执行） -->
<animation-list xmlns:android="http://schemas.android.com/apk/res/android" android:oneshot="false">
    <!-- android:drawable（需要绘制的效果（可以是图片也可以是其它）） -->
    <!-- android:duration（显示时间） -->
    <item
        android:drawable="@drawable/app05"
        android:duration="500"
        />

    <item
        android:drawable="@drawable/app06"
        android:duration="500"
        />

    <item
        android:drawable="@drawable/app08"
        android:duration="500"
        />

    <item
        android:drawable="@drawable/app06"
        android:duration="500"
        />

</animation-list>