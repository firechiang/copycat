<?xml version="1.0" encoding="utf-8"?>
<!-- 注意：自定义的资源目录需要在 build.gradle 文件里面配置，否则读取不到-->
<!-- 线性布局,android:orientation="vertical"(垂直)，默认是 horizontal（水平） -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".data_storage.DataStorageActivityMain">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="测试SD卡存储"
        android:onClick="toSdStorage"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="测试内部文件存储"
        android:onClick="toIfStorage"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="测试外部文件存储"
        android:onClick="toOfStorage"
        />

    <Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="测试数据库存储"
    android:onClick="toDbStorage"
    />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="测试SharedPreference存储（就是Key Value存储）"
        android:onClick="toSpStorage"
        />

</LinearLayout>