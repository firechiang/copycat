<?xml version="1.0" encoding="utf-8"?>
<!-- 注意：自定义的资源目录需要在 build.gradle 文件里面配置，否则读取不到-->
<!-- 线性布局,android:orientation="vertical"(垂直)，默认是 horizontal（水平） -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".thread_message.ThreadMessageMainActivity">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="使用Handler消息机制和不使用Handler简单对比"
        android:textAllCaps="false"
        android:onClick="useNotHandlerX"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="使用Handler消息机制实现对数值的手动和自动增加（注意：这里包含消息移除和禁用Button）"
        android:textAllCaps="false"
        android:onClick="addAndReduction"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="AsyncTask 异步任务简单使用（以后刷新UI视图可以使用这个来做，因为它其实就是一个线程池）"
        android:textAllCaps="false"
        android:onClick="asyncTask"
        />

</LinearLayout>
