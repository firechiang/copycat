<?xml version="1.0" encoding="utf-8"?>
<!-- 注意：自定义的资源目录需要在 build.gradle 文件里面配置，否则读取不到-->
<!-- 线性布局,android:orientation="vertical"(垂直)，默认是 horizontal（水平） -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".thread_message.ThreadMessageMainActivity01">

    <!-- android:visibility="gone"（隐藏视图） -->
    <ProgressBar
        android:id="@+id/thread_message_main_activity_01_progressbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="不使用Handler的方式获取百度首页数据"
        android:onClick="notHandlerGetBaiduData"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="使用Handler的方式获取百度首页数据"
        android:onClick="useHandlerGetBaiduData"
        />

    <TextView
        android:id="@+id/thread_message_main_activity_01_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

</LinearLayout>
