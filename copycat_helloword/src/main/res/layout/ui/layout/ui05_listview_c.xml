<?xml version="1.0" encoding="utf-8"?>
<!-- 注意：自定义的资源目录需要在 build.gradle 文件里面配置，否则读取不到-->
<!-- 线性布局,android:orientation="vertical"(垂直)，默认是 horizontal（水平） -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui_component.Ui05ListViewComponent">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="显示简单文本列表"
        android:onClick="showSimpleTextListView"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="显示复杂文本带图片的列表"
        android:onClick="showComplexTextListView"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="显示自定义的列表"
        android:onClick="showCustomTextListView"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="显示自定义的列表（TextView左边直接加图片和自定义公共样式属性）"
        android:onClick="showCustomXTextListView"
        />


</LinearLayout>