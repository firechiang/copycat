<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".system_broadcast.SystemBroadcast02">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="注册系统广播接收器"
        android:onClick="registerBroadcast"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="解除注册系统广播接收器"
        android:onClick="unRegisterBroadcast"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="发送一般的系统广播"
        android:onClick="sendGeneralBroadcast"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="发送有序的系统广播"
        android:onClick="sendOrderBroadcast"
        />
</LinearLayout>
