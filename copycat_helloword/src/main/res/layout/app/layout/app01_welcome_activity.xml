<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app01_welcome_activity_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".app.App01WelcomeActivity"
    android:background="@drawable/app_welcome">


    <!-- android:layout_centerInParent（垂直水平居中） -->
    <!-- android:indeterminateDrawable="@anim/rotate_loading"（注意：这个是我们自定义的动画效果） -->
    <!-- android:indeterminateDuration="1000"（持续时间，越短旋转速度越快） -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateDrawable="@anim/rotate_loading"
        android:indeterminateDuration="1000"
        android:layout_centerInParent="true"/>



    <!-- android:layout_centerHorizontal（是否水平居中） -->
    <!-- android:layout_alignParentBottom（与父视图的下方退对齐（就是在父视图的底部）） -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:textSize="20sp"
        android:text="当前版 1.0"
        />

</RelativeLayout>
