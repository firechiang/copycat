<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".app.App01MainActivity">


    <EditText
        android:id="@+id/app01_main_activity_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="点击下面的按钮抖动输入框"
        />

    <Button
        android:id="@+id/app01_main_activity_button01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="点击抖动输入框"
        android:onClick="loginAction"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/app01_main_activity_button01"
        android:text="进入手机杀毒页面"
        android:onClick="antiAction"
        />

</RelativeLayout>
